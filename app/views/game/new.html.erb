<div class="container py-3">
<h1>Welcome to Euchre on Rails</h1>
</div>

<div class="container mb-3">
  <div class="d-grid">
    <a href="/" class="btn btn-dark btn-lg" type="button" name="button">Check for Invites</a>
  </div>
</div>

<div class="container mb-3">
  <ul class="list-group list-group-numbered">
    <% @updates.each do |update|%>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold"><%= update.created_at %></div>
        <%= update.text %>
      </div>
    </li>
    <% end %>
</ul>
</div>

<div class="container mb-3">
  <h3>Create a New Room</h3>
</div>

<div class="container mb-3">
<div class="mb-3">
<div class="mb-3">
<%= form_tag('/game',method: :post) do %>
  <label for="room_name" class="form-label">Room Name:</label>
  <%= text_field :room_name, :room_name, class: "form-control", value: Time.now.strftime('%Y-%m-%d %H:%M:%S') %>
</div>

<div class="mb-3">
  <label for="player1" class="form-label">Player 1:</label>
  <%= select :player1_id,:id,[[current_user.username,current_user.id]],{include_blank: false}, {class: 'form-select', id: "player1", disabled: true } %>
</div>

<div class="mb-3">
  <label for="player2" class="form-label">Player 2:</label>
  <%= select :player2_id,:id,@users,{include_blank: false}, {class: 'form-select', id: "player2"} %>
</div>
<div class="mb-3">
  <label for="player3" class="form-label">Player 3:</label>
  <%= select :player3_id,:id,@users,{include_blank: false}, {class: 'form-select', id: "player3"} %>
</div>
<div class="mb-2">
  <label for="player4" class="form-label">Player 4:</label>
  <%= select :player4_id,:id,@users,{include_blank: false}, {class: 'form-select', id: "player4"} %>
</div>
<div class="mb-3">
  <p class="">Make sure you do not include the same user twice!</p>
</div>
<div class="mb-3">
  <div class="d-grid">
    <%= submit_tag("Start Game", class: "btn btn-dark btn-lg") %>
  </div>

</div>


<% end %>

</div>
