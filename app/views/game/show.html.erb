<!-- use this to pass in room id variable to javascript -->
<div id='room-id' data-room-id="<%= @room.id %>"></div>
<div id='username' data-username="<%= current_user.username %>"></div>
<div id='user-id' data-user-id="<%= current_user.id %>"></div>

<%= react_component('App',{username: current_user.username, roomId: @room.id, userId: current_user.id, playerNo: {@room.player1_id => "p1", @room.player2_id => "p2", @room.player3_id => "p3", @room.player4_id => "p4" }[current_user.id], playerNames: {"p1" => @player1_username, "p2" => @player2_username, "p3" => @player3_username, "p4" => @player4_username} },{}) %>

