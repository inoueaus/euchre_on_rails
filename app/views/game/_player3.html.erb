  <h5 id="game-telop"></h5>
</div>

<div id="pickup-yesno" class="container mb-1">
  <div class="d-grid">
  <div class="btn-group mr-2" role="group" aria-label="First group">
    <button id="pickup-yes" data="0" type="button" class="btn btn-dark btn-lg">Pickup</button>
    <button id="pickup-no" data="1" type="button" class="btn btn-dark btn-lg">Pass</button>
  </div>
</div>
</div>

<div id="trump-selection" class="container mb-1">
  <div class="d-grid">
  <div class="btn-group mr-2" role="group" aria-label="First group">
    <button id="trump-selection0" data="0" type="button" class="btn btn-dark btn-lg">♤</button>
    <button id="trump-selection1" data="1" type="button" class="btn btn-dark btn-lg">♧</button>
    <button id="trump-selection2" data="2" type="button" class="btn btn-dark btn-lg">♢</button>
    <button id="trump-selection3" data="3" type="button" class="btn btn-dark btn-lg">♡</button>
    <button id="trump-selection4" data="4" type="button" class="btn btn-dark btn-lg">Pass</button>
  </div>
</div>
</div>

<div id="loner-selection" class="container mb-1">
  <div class="d-grid">
  <div class="btn-group mr-2" role="group" aria-label="First group">
    <button id="loner-selection0" data="0" type="button" class="btn btn-dark btn-lg">Yes</button>
    <button id="loner-selection1" data="1" type="button" class="btn btn-dark btn-lg">No</button>
  </div>
</div>
</div>

