<% if obj.errors.any? %>
<div class="container py-2">
  <%= render 'shared/errors', obj: obj %>
</div>
<% end %>


<%= form_for obj, url: rooms_path, html: {method: :post} do |f| %>

<div class="mb-3">
  <%= f.label :room_name, "Room Name:", class: "form-label" %>
  <br><%= f.text_field :room_name, class: "form-control", placeholder: "username123" %>
</div>

<p>Player 1:</p>
<p class="list-group-item fw-light"><%= current_user.username %> </p>
</div>

<div class="mb-3">
<label for="player2" class="form-label">Player 2:</label>
<%= f.select :player2,:id,@users,{include_blank: false}, {class: 'form-select', id: "player2"} %>
</div>

<div class="mb-3">
  <label for="player3" class="form-label">Player 3:</label>
  <%= f.select :player3,:id,@users,{include_blank: false}, {class: 'form-select', id: "player3"} %>
</div>

<div class="mb-3">
  <label for="player4" class="form-label">Player 4:</label>
  <%= f.select :player4,:id,@users,{include_blank: false}, {class: 'form-select', id: "player4"} %>
</div>

<div class="mb-3">
<p><%= f.submit "Submit", class: "btn btn-dark" %></p>
</div>

<% end %>
